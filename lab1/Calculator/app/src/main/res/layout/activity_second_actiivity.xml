<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:background="@color/white"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="70sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/white"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shift_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:onClick="OnClickShift"
                android:text="Shift" />

            <TextView
                android:id="@+id/ab_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="AB" />

            <TextView
                android:id="@+id/exp_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="exp" />

            <TextView
                android:id="@+id/arcsin_ptn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="arcsin" />

            <TextView
                android:id="@+id/arccos_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="arccos" />

            <TextView
                android:id="@+id/arctan_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="arctan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/open_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="(" />

            <TextView
                android:id="@+id/close_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text=")" />

            <TextView
                android:id="@+id/ln_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="ln" />

            <TextView
                android:id="@+id/sin_ptn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="sin" />

            <TextView
                android:id="@+id/cos_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="cos" />

            <TextView
                android:id="@+id/tan_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="tan" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="7" />

            <TextView
                android:id="@+id/eight_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="8" />

            <TextView
                android:id="@+id/nine_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="9" />

            <TextView
                android:id="@+id/log10_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="log10" />

            <TextView
                android:id="@+id/pow_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="x^n" />

            <TextView
                android:id="@+id/csqrt_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="3√x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="4" />

            <TextView
                android:id="@+id/five_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="5" />

            <TextView
                android:id="@+id/six_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="6" />

            <TextView
                android:id="@+id/log2_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="log2" />

            <TextView
                android:id="@+id/abs_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="abs" />

            <TextView
                android:id="@+id/sqrt_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="√x" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="1" />

            <TextView
                android:id="@+id/two_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="2" />

            <TextView
                android:id="@+id/three_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="3" />

            <TextView
                android:id="@+id/mul_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="*" />

            <TextView
                android:id="@+id/division_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="/" />

            <TextView
                android:id="@+id/remainder_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="%" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/point_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="." />

            <TextView
                android:id="@+id/zero_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="0" />

            <TextView
                android:id="@+id/back_btn"
                style="@style/NumberButton"
                android:background="#FFC107"
                android:text="@string/back" />

            <TextView
                android:id="@+id/plus_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="+" />

            <TextView
                android:id="@+id/minus_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="-" />

            <TextView
                android:id="@+id/equal_btn"
                style="@style/ActionButton"
                android:background="#009688"
                android:text="=" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>